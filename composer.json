{
    "name": "alphaolomi/azampay-php",
    "description": "AzamPay PHP SDK",
    "keywords": [
        "alphaolomi",
        "azampay-php",
        "azampay",
        "sdk",
        "payments"
    ],
    "homepage": "https://github.com/alphaolomi/azampay-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Alpha Olomi",
            "email": "alphaolomi@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "friendsofphp/php-cs-fixer": "^3.13"
    },
    "autoload": {
        "psr-4": {
            "AlphaOlomi\\AzampayService\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AlphaOlomi\\AzampayService\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
